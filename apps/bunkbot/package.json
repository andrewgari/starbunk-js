{
	"name": "@starbunk/bunkbot",
	"version": "1.0.0",
	"description": "BunkBot - Reply bots and admin commands container",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:docker": "tsc -p tsconfig.docker.json && tsc-alias -p tsconfig.docker.json",
		"start": "node dist/index.js",
		"dev": "cross-env NODE_ENV=development DEBUG=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"test": "jest",
		"test:unit": "jest",
		"test:container": "jest --testPathPattern=container-startup --runInBand",
		"test:integration": "jest --testPathPattern=container-integration --runInBand --detectOpenHandles",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:bots": "jest --testPathPattern=\"__tests__/(debug-mode-behavior|individual-bot-triggers|bot-trigger-conditions)\" --runInBand --detectOpenHandles",
		"test:bot-triggers": "jest --testPathPattern=bot-trigger-conditions --verbose",
		"test:debug-mode": "jest --testPathPattern=debug-mode-behavior --verbose",
		"test:all-comprehensive": "ts-node src/__tests__/run-all-tests.ts",
		"type-check": "tsc --noEmit",
		"clean": "rimraf dist",
		"e2e:live": "ts-node tests/e2e/live-e2e.ts"
	},
	"dependencies": {
		"@discordjs/builders": "^1.6.5",
		"@discordjs/rest": "^2.5.0",
		"@prisma/client": "^6.7.0",
		"@starbunk/shared": "file:../../packages/shared",
		"async": "^3.2.4",
		"chalk": "^4.1.2",
		"discord-api-types": "^0.38.2",
		"discord.js": "^14.18.0",
		"dotenv": "^16.5.0",
		"rxjs": "^7.8.2",
		"uuid": "^11.1.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^20.17.14",
		"@types/uuid": "^10.0.0",
		"cross-env": "^7.0.3",
		"jest": "^29.7.0",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.11",
		"tsconfig-paths": "^4.2.0",
		"prisma": "^6.7.0",
		"typescript": "~5.3.0"
	}
}
