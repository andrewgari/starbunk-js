# =============================================================================
# DJCova - Discord Music Bot Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Required variables must be set for the bot to function
# Optional variables have sensible defaults

# =============================================================================
# DISCORD CONFIGURATION (REQUIRED)
# =============================================================================

# Discord bot token from https://discord.com/developers/applications
# Required: Yes
DISCORD_TOKEN=your-discord-bot-token-here

# Application/client ID is derived automatically from the bot token; no CLIENT_ID variable is needed.

# =============================================================================
# MUSIC CONFIGURATION (OPTIONAL)
# =============================================================================

# Idle timeout in seconds before auto-disconnect from voice channel
# When music stops playing, DJCova will wait this long before disconnecting
# Valid range: 5-3600 seconds (5 seconds to 1 hour)
# Default: 30
MUSIC_IDLE_TIMEOUT_SECONDS=30

# =============================================================================
# ENVIRONMENT CONFIGURATION (OPTIONAL)
# =============================================================================

# Node environment (development, production, test)
# Default: production
NODE_ENV=production

# Enable debug mode for verbose logging
# When true, enables detailed debug logs
# Default: false
DEBUG_MODE=false

# =============================================================================
# TESTING CONFIGURATION (OPTIONAL)
# =============================================================================

# Comma-separated list of Discord server/guild IDs for testing
# When set, bot commands may be restricted to these servers during development
# Example: 123456789012345678,987654321098765432
TESTING_SERVER_IDS=

# Comma-separated list of Discord channel IDs for testing
# When set, bot may restrict certain behaviors to these channels
# Example: 123456789012345678,987654321098765432
TESTING_CHANNEL_IDS=

# =============================================================================
# HEALTH & METRICS CONFIGURATION (OPTIONAL)
# =============================================================================

# Port for health check and metrics endpoint
# Exposes /health, /metrics, /ready, /live endpoints
# Default: 3000
METRICS_PORT=3000

# =============================================================================
# CI/CD CONFIGURATION (OPTIONAL)
# =============================================================================

# Enable CI smoke test mode
# When true, starts minimal health server without Discord login
# Used for CI/CD pipeline health checks
# Default: false
CI_SMOKE_MODE=false

