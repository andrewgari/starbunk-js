{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "jest"],
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "scripts/**/*", "jest.config.js"],
    "exclude": ["node_modules", "dist"]
}
