# Starbunk Discord Bot Environment Configuration
# Copy this file to .env and fill in real values
# DO NOT commit .env files to version control

# =============================================================================
# DISCORD BOT TOKENS
# =============================================================================

# Main Discord Bot Tokens
STARBUNK_TOKEN=your-discord-bot-token-here
SNOWBUNK_TOKEN=your-snowbunk-bot-token-here

# Container-specific Discord Bot Tokens (optional, fallback to above)
BUNKBOT_TOKEN=your-bunkbot-token-here
COVABOT_TOKEN=your-covabot-token-here
DJCOVA_TOKEN=your-djcova-token-here
STARBUNK_DND_TOKEN=your-starbunk-dnd-token-here

# E2E Testing Bot Token (separate bot for testing)
E2E_BOT_TOKEN=your-e2e-bot-token-here
E2E_WEBHOOK_URL=your-e2e-webhook-url-here

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================

# Discord Webhook URL for logging/notifications
DISCORD_WEBHOOK_URL=your-discord-webhook-url-here

# Debug Configuration
DEBUG_MODE=false
TESTING_SERVER_IDS=your-test-server-ids-comma-separated
TESTING_CHANNEL_IDS=your-test-channel-ids-comma-separated

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Ollama API Configuration (for local LLM)
OLLAMA_API_URL=http://192.168.50.3:11434

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/starbunk

# Qdrant Vector Database (for CovaBot memory)
QDRANT_URL=http://192.168.50.3:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# =============================================================================
# COVABOT SPECIFIC CONFIGURATION
# =============================================================================

# Embedding Configuration
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=16
EMBEDDING_CACHE_SIZE=2000
EMBEDDING_TIMEOUT=60000

# Memory Collections
PERSONALITY_COLLECTION=covabot_personality
CONVERSATION_COLLECTION=covabot_conversations
MEMORY_COLLECTION=covabot_memory

# Performance Tuning
QDRANT_SEARCH_LIMIT=50
QDRANT_SIMILARITY_THRESHOLD=0.7
QDRANT_BATCH_SIZE=100

# Production Settings
NODE_ENV=production
DEBUG_MODE=false

# Discord Configuration
COVABOT_TOKEN="<insert-covabot-token>"
COVA_USER_ID=139592376443338752

# Primary Discord server/guild ID (defaults to Starbunk Crusaders)
GUILD_ID=753251582719688714

# Additional guild IDs for specific environments (optional)
# STARBUNK_STAGING_GUILD_ID=856617421427441674
# SNOWFALL_GUILD_ID=696689954759245915
# COVADAX_GUILD_ID=798613445301633134

# Database Configuration (if using PostgreSQL alongside Qdrant)
DATABASE_URL="postgresql://user:password@postgres:5432/covabot_prod"

# LLM Configuration
OPENAI_API_KEY="<insert-openai-key>"
ANTHROPIC_API_KEY="<insert-anthropic-key>"

# Security
JWT_SECRET="<insert-jwt-secret>"
API_KEY="<insert-api-key>"
