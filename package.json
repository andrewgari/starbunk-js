{
  "name": "bunkbot",
  "version": "1.10.1",
  "description": "it's bot that says blu, among things...",
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "sync-versions": "bash ./scripts/sync-versions.sh",
    "build": "npm run build:shared && npm run build:containers",
    "build:shared": "cd packages/shared && npm run build",
    "build:containers": "npm run build:bunkbot && npm run build:djcova && npm run build:covabot && npm run build:bluebot",
    "build:bunkbot": "cd apps/bunkbot && npm run build",
    "build:djcova": "cd apps/djcova && npm run build",
    "build:covabot": "cd apps/covabot && npm run build",
    "build:bluebot": "cd apps/bluebot && npm run build",
    "start": "docker compose up -d",
    "start:dev": "docker compose -f infrastructure/docker/docker-compose.dev.yml up -d",
    "stop": "docker compose down",
    "logs": "docker compose logs -f",
    "logs:bunkbot": "docker compose logs -f bunkbot",
    "logs:djcova": "docker compose logs -f djcova",
    "logs:covabot": "docker compose logs -f covabot",
    "logs:bluebot": "docker compose logs -f bluebot",
    "dev:bunkbot": "cd apps/bunkbot && npm run dev",
    "dev:djcova": "cd apps/djcova && npm run dev",
    "dev:covabot": "cd apps/covabot && npm run dev",
    "dev:bluebot": "cd apps/bluebot && npm run dev",
    "test": "npm run test:shared && npm run test:bunkbot",
    "test:full": "npm run test:shared && npm run test:containers",
    "test:shared": "cd packages/shared && npm test",
    "test:containers": "npm run test:bunkbot && npm run test:djcova && npm run test:covabot && npm run test:bluebot",
    "test:bunkbot": "cd apps/bunkbot && npm test",
    "e2e:bunkbot:live": "cd apps/bunkbot && npm run e2e:live",
    "test:djcova": "cd apps/djcova && npm test",
    "test:covabot": "cd apps/covabot && npm test",
    "test:bluebot": "cd apps/bluebot && npm test",
    "lint": "eslint apps/*/src/**/*.ts packages/*/src/**/*.ts",
    "lint:fix": "eslint apps/*/src/**/*.ts packages/*/src/**/*.ts --fix",
    "lint:bunkbot": "cd apps/bunkbot && npm run lint",
    "format": "prettier --write \"apps/*/src/**/*.ts\" \"packages/*/src/**/*.ts\"",
    "type-check": "npm run build:shared && npm run type-check:shared && npm run type-check:containers",
    "type-check:shared": "cd packages/shared && npm run type-check",
    "type-check:containers": "npm run type-check:bunkbot && npm run type-check:djcova && npm run type-check:covabot && npm run type-check:bluebot",
    "type-check:bunkbot": "cd apps/bunkbot && npm run type-check",
    "type-check:djcova": "cd apps/djcova && npm run type-check",
    "type-check:covabot": "cd apps/covabot && npm run type-check",
    "type-check:bluebot": "cd apps/bluebot && npm run type-check",
    "clean": "rimraf apps/*/dist && rimraf packages/*/dist",
    "docker:build": "docker compose build",
    "docker:build:bunkbot": "docker compose build bunkbot",
    "docker:build:djcova": "docker compose build djcova",
    "docker:build:covabot": "docker compose build covabot",
    "docker:build:bluebot": "docker compose build bluebot",
    "check:all": "npm run type-check && npm run lint && npm run test && npm run docker:build",
    "check:ci": "npm run type-check && npm run lint && npm run test",
    "validate:structure": "scripts/validation/run-all-validations.sh",
    "validate:root": "scripts/validation/check-root-directory.sh",
    "validate:naming": "scripts/validation/check-naming-conventions.sh",
    "validate:temp-files": "scripts/validation/check-temporary-files.sh",
    "validate:docs": "scripts/validation/check-documentation-structure.sh",
    "health-check": "scripts/monitoring/structure-health-check.sh",
    "health-check:json": "scripts/monitoring/structure-health-check.sh --json",
    "release": "semantic-release"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewgari/starbunk-js.git"
  },
  "keywords": [
    "discord",
    "blue"
  ],
  "author": "Andrew Gari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andrewgari/starbunk-js/issues"
  },
  "homepage": "https://github.com/andrewgari/starbunk-js#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.11",
    "ioredis": "^5.8.0",
    "tsx": "^4.6.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "semantic-release": "^25.0.2",
    "typescript": "~5.3.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache",
      "prettier --write"
    ]
  },
  "overrides": {
    "discord.js": "^14.18.0",
    "inflight": "npm:@aashutoshrathi/inflight@^1.0.0",
    "glob": "^10.0.0"
  }
}
