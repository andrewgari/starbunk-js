{
	"compilerOptions": {
		/* Language and Environment */
		"target": "ES2021",
		"module": "commonjs",
		"rootDir": "./src/",
		"outDir": "./dist/",

		/* Type Checking */
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		/* Module Resolution */
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},

		/* Emit */
		"removeComments": true,
		"sourceMap": true,

		/* Interop */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "test/**/*.ts", ".eslintrc.js", "jest.config.js", "*.{js,ts}", "process-env.d.ts"],
	"exclude": ["node_modules", "dist"]
}
