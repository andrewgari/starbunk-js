# Discord Configuration
DISCORD_TOKEN=your-discord-bot-token-here
CLIENT_ID=your-discord-application-client-id
GUILD_ID=your-guild-id-for-development  # Optional: for guild-specific commands

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2  # Default model to use

# Document Storage
DOCUMENTS_PATH=./data/documents  # Path to store processed documents

# Health Check (Optional)
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=3000

# Logging
LOG_LEVEL=info
NODE_ENV=development

# Role-based Access Control
# These are role name patterns that will be matched (case-insensitive)
ALLOWED_ROLES=admin,moderator,document-user
UPLOAD_ROLES=admin,moderator

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,text/markdown

# Performance Settings
EMBEDDING_BATCH_SIZE=10
SEARCH_SIMILARITY_THRESHOLD=0.1
MAX_SEARCH_RESULTS=10
MAX_DOCUMENT_CONTENT_LENGTH=50000  # Characters

# Security
TEMP_FILE_CLEANUP=true
DOCUMENT_RETENTION_DAYS=30  # Auto-delete documents after X days (0 = never)
