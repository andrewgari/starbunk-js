{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@shared/*": ["../shared/src/*"]
		}
	},
	"include": [
		"src/index.ts",
		"src/health.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests",
		"src/cova-bot/**",
		"src/web/**",
		"src/index-web.ts",
		"src/services/personalityNotesServiceDb.ts"
	]
}
