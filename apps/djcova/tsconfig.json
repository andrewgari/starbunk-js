{
	"compilerOptions": {
		"ignoreDeprecations": "6.0",
		"composite": true,
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
			"baseUrl": "./src",
			"paths": {
				"@/*": ["*"],
				// Resolve the shared package to its source TS files. Paths are
				// resolved relative to baseUrl (apps/djcova/src), so we need to
				// walk back to the repo root before going into packages/shared.
				"@starbunk/shared": ["../../../packages/shared/src"],
				"@starbunk/shared/*": ["../../../packages/shared/src/*"]
			}
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"tests",
		"src/**/__tests__/**"
	],
	"references": [
		{ "path": "../../packages/shared" }
	]
}
