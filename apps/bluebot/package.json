{
	"name": "@starbunk/bluebot",
	"version": "1.10.1",
	"description": "BlueBot - Blue detection and response bot container",
	"main": "dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:docker": "tsc -p tsconfig.docker.json && tsc-alias -p tsconfig.docker.json",
		"start": "node dist/index.js",
		"dev": "cross-env NODE_ENV=development DEBUG=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"test": "vitest",
		"test:unit": "vitest",
		"test:e2e": "vitest run tests/e2e",
		"type-check": "tsc --noEmit",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"check:all": "npm run type-check && npm run lint && npm run test",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"discord.js": "^14.18.0",
		"dotenv": "^16.5.0",
		"openai": "^4.95.1",
		"prom-client": "^15.1.3",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/node": "^20.17.14",
		"cross-env": "^7.0.3",
		"rimraf": "^5.0.1",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.11",
		"tsconfig-paths": "^4.2.0",
		"typescript": "~5.3.0",
		"vitest": "^4.0.17"
	}
}
