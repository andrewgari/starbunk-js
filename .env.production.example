# Qdrant Vector Database Production Configuration
# Copy this file to /mnt/user/appdata/covabot/.env.production on Unraid

# Qdrant Configuration
QDRANT_URL=http://qdrant-covabot:6333
QDRANT_API_KEY=your-secure-api-key-here  # Optional but recommended for production

# Embedding Configuration (from PR 248 EmbeddingService)
EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=16  # Reduced for production stability
EMBEDDING_CACHE_SIZE=2000  # Increased for production
EMBEDDING_TIMEOUT=60000  # Increased timeout for production

# Memory Collections (from PR 248 QdrantMemoryService)
PERSONALITY_COLLECTION=covabot_personality
CONVERSATION_COLLECTION=covabot_conversations
MEMORY_COLLECTION=covabot_memory

# Performance Tuning
QDRANT_SEARCH_LIMIT=50
QDRANT_SIMILARITY_THRESHOLD=0.7
QDRANT_BATCH_SIZE=100

# Production Settings
NODE_ENV=production
DEBUG_MODE=false

# Discord Configuration (Production)
COVABOT_TOKEN=your-production-covabot-token-here
COVA_USER_ID=139592376443338752

# Production Discord server/guild ID
GUILD_ID=753251582719688714

# Database Configuration (External PostgreSQL)
DATABASE_URL=postgresql://user:password@your-postgres-host:5432/covabot_prod

# LLM Configuration (Production)
OPENAI_API_KEY=your-production-openai-key-here
ANTHROPIC_API_KEY=your-production-anthropic-key-here

# Production Safety - CRITICAL: Only allow production channels
TESTING_SERVER_IDS=753251582719688714
TESTING_CHANNEL_IDS=798613445301633137

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=your-secure-session-secret-here

# Web Interface (if enabled)
WEB_PORT=7080
WEB_HOST=0.0.0.0
ENABLE_WEB_UI=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
