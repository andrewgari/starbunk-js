{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"lib": ["ES2021", "dom"],
		"types": ["cypress", "node"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"baseUrl": "../",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["**/*.ts"]
}
