{
	"name": "@starbunk/bluebot",
	"version": "1.5.1",
	"description": "BlueBot - Blue detection and response bot container",
	"main": "dist/index-minimal.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:docker": "tsc -p tsconfig.docker.json && tsc-alias -p tsconfig.docker.json",
		"start": "node dist/index-minimal.js",
		"dev": "cross-env NODE_ENV=development DEBUG=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index-minimal.ts",
		"test": "jest",
		"test:unit": "jest --testPathIgnorePatterns=e2e",
		"test:e2e": "jest --testPathPattern=e2e",
		"type-check": "tsc --noEmit",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"check:all": "npm run type-check && npm run lint && npm run test",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@discordjs/builders": "^1.6.5",
		"@discordjs/rest": "^2.5.0",
		"@prisma/client": "^6.7.0",
		"@starbunk/shared": "file:../../packages/shared",
		"chalk": "^4.1.2",
		"discord.js": "^14.18.0",
		"dotenv": "^16.5.0",
		"openai": "^4.95.1",
		"rxjs": "^7.8.2",
		"uuid": "^11.1.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^20.17.14",
		"@types/uuid": "^10.0.0",
		"cross-env": "^7.0.3",
		"jest": "^29.7.0",
		"prisma": "^6.7.0",
		"rimraf": "^5.0.1",
		"ts-jest": "^29.2.6",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.11",
		"tsconfig-paths": "^4.2.0",
		"typescript": "~5.3.0"
	}
}
