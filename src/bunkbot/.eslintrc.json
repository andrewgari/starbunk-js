{
  "extends": ["../../config/eslint/.eslintrc.json"],
  "overrides": [
    {
      "files": ["src/**/*.{ts,tsx,js,jsx}"],
      "excludedFiles": [
        "src/**/*.test.*",
        "src/**/*.spec.*",
        "src/**/__tests__/**/*"
      ],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["./*", "../*"],
                "message": "Use @/ path alias for internal imports in Bunkbot instead of relative ./ or ../ imports."
              }
            ]
          }
        ]
      }
    }
  ]
}
