{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"],
			"@shared/*": ["../shared/src/*"]
		}
	},
	"include": ["src/index.ts", "src/commands/ping.ts", "src/commands/debug.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"tests",
		"src/adapter.ts",
		"src/botRegistry.ts",
		"src/commandHandler.ts",
		"src/core/**/*",
		"src/reply-bots/**/*",
		"src/test-utils/**/*",
		"src/__tests__/**/*"
	]
}
