{
  "name": "bunkbot",
  "version": "1.2.0",
  "description": "it's bot that says blu, among things...",
  "type": "commonjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "sync-versions": "./scripts/sync-versions.sh",
    "build": "npm run build:shared && npm run build:containers",
    "build:shared": "tsc -p packages/shared/tsconfig.json",
    "build:containers": "npm run build:bunkbot && npm run build:djcova && npm run build:starbunk-dnd && npm run build:covabot",
    "build:bunkbot": "cd apps/bunkbot && npm run build",
    "build:djcova": "cd apps/djcova && npm run build",
    "build:starbunk-dnd": "cd apps/starbunk-dnd && npm run build",
    "build:covabot": "cd apps/covabot && npm run build",
    "start": "docker compose up -d",
    "start:dev": "docker compose -f infrastructure/docker/docker-compose.dev.yml up -d",
    "stop": "docker compose down",
    "logs": "docker compose logs -f",
    "logs:bunkbot": "docker compose logs -f bunkbot",
    "logs:djcova": "docker compose logs -f djcova",
    "logs:starbunk-dnd": "docker compose logs -f starbunk-dnd",
    "logs:covabot": "docker compose logs -f covabot",
    "dev:bunkbot": "cd apps/bunkbot && npm run dev",
    "dev:djcova": "cd apps/djcova && npm run dev",
    "dev:starbunk-dnd": "cd apps/starbunk-dnd && npm run dev",
    "dev:covabot": "cd apps/covabot && npm run dev",
    "test": "npm run test:shared",
    "test:full": "npm run test:shared && npm run test:containers",
    "test:containers:note": "Container tests temporarily disabled due to import path issues from monolithic structure transition",
    "test:shared": "cd packages/shared && npm test",
    "test:containers": "npm run test:bunkbot && npm run test:djcova && npm run test:starbunk-dnd && npm run test:covabot",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "test:bots": "node scripts/test-reply-bots.js",
    "test:bunkbot": "cd apps/bunkbot && npm test",
    "e2e:bunkbot:live": "cd apps/bunkbot && npm run e2e:live",
    "test:djcova": "cd apps/djcova && npm test",
    "test:starbunk-dnd": "cd apps/starbunk-dnd && npm test",
    "test:covabot": "cd apps/covabot && npm test",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint apps/*/src/**/*.ts packages/*/src/**/*.ts",
    "lint:fix": "eslint apps/*/src/**/*.ts packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"apps/*/src/**/*.ts\" \"packages/*/src/**/*.ts\"",
    "type-check": "npm run type-check:shared && npm run type-check:containers",
    "type-check:shared": "cd packages/shared && npm run type-check",
    "type-check:containers": "npm run type-check:bunkbot && npm run type-check:djcova && npm run type-check:starbunk-dnd && npm run type-check:covabot",
    "type-check:bunkbot": "cd apps/bunkbot && npm run type-check",
    "type-check:djcova": "cd apps/djcova && npm run type-check",
    "type-check:starbunk-dnd": "cd apps/starbunk-dnd && npm run type-check",
    "type-check:covabot": "cd apps/covabot && npm run type-check",
    "clean": "rimraf apps/*/dist && rimraf packages/*/dist",
    "build:clean": "npm run clean && npm run build",
    "docker:build": "docker compose build",
    "docker:build:bunkbot": "docker compose build bunkbot",
    "docker:build:djcova": "docker compose build djcova",
    "docker:build:starbunk-dnd": "docker compose build starbunk-dnd",
    "docker:build:covabot": "docker compose build covabot",
    "docker:rebuild": "docker compose build --no-cache",
    "check:all": "npm run type-check && npm run lint && npm run test && npm run docker:build",
    "check:ci": "npm run type-check && npm run lint && npm run test",
    "setup:dirs": "./scripts/ensure-directories.sh",
    "setup:containers": "npm run setup:shared && npm run setup:bunkbot && npm run setup:djcova && npm run setup:starbunk-dnd && npm run setup:covabot",
    "setup:shared": "cd packages/shared && npm install",
    "setup:bunkbot": "cd apps/bunkbot && npm install",
    "setup:djcova": "cd apps/djcova && npm install",
    "setup:starbunk-dnd": "cd apps/starbunk-dnd && npm install",
    "setup:covabot": "cd apps/covabot && npm install",
    "validate:structure": "tools/scripts/validation/run-all-validations.sh",
    "validate:root": "tools/scripts/validation/check-root-directory.sh",
    "validate:naming": "tools/scripts/validation/check-naming-conventions.sh",
    "validate:temp-files": "tools/scripts/validation/check-temporary-files.sh",
    "validate:docs": "tools/scripts/validation/check-documentation-structure.sh",
    "health-check": "tools/scripts/monitoring/structure-health-check.sh",
    "health-check:json": "tools/scripts/monitoring/structure-health-check.sh --json",
    "unreleased": "scripts/check-unreleased.sh",
    "release": "scripts/create-release.sh"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrewgari/starbunk-js.git"
  },
  "keywords": [
    "discord",
    "blue"
  ],
  "author": "Andrew Gari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andrewgari/starbunk-js/issues"
  },
  "homepage": "https://github.com/andrewgari/starbunk-js#readme",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.11.0",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.11",
    "ioredis": "^5.8.0",
    "prisma": "^5.7.1",
    "tsx": "^4.6.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.1",
    "typescript": "~5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache",
      "prettier --write"
    ]
  },
  "overrides": {
    "discord.js": "^14.18.0"
  }
}
