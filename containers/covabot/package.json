{
	"name": "@starbunk/covabot",
	"version": "1.0.0",
	"description": "CovaBot - AI personality bot container",
	"main": "dist/index-enhanced.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"start": "node dist/index.js",
		"start:minimal": "node dist/index-minimal.js",
		"dev": "cross-env NODE_ENV=development DEBUG=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
		"dev:minimal": "cross-env NODE_ENV=development DEBUG=true ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index-minimal.ts",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"type-check": "tsc --noEmit",
		"clean": "rimraf dist",
		"docker:build": "docker build -t covabot .",
		"docker:run": "docker run --env-file .env -p 7080:7080 covabot",
		"web:dev": "nodemon --exec ts-node src/web/server.ts",
		"db:migrate": "ts-node src/database/migrate.ts",
		"db:seed": "ts-node src/database/seed.ts"
	},
	"dependencies": {
		"@starbunk/shared": "file:../shared",
		"@discordjs/builders": "^1.6.5",
		"@discordjs/rest": "^2.5.0",
		"@xenova/transformers": "^2.17.2",
		"discord.js": "^14.18.0",
		"@prisma/client": "^6.7.0",
		"dotenv": "^16.5.0",
		"openai": "^4.95.1",
		"chalk": "^4.1.2",
		"zod": "^3.24.2",
		"rxjs": "^7.8.2",
		"express": "^4.18.2",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"compression": "^1.7.4",
		"morgan": "^1.10.0",
		"axios": "^1.6.2",
		"pg": "^8.11.3",
		"qdrant-js": "^1.7.0",
		"uuid": "^9.0.1",
		"joi": "^17.11.0",
		"bcrypt": "^5.1.1",
		"jsonwebtoken": "^9.0.2",
		"rate-limiter-flexible": "^3.0.8",
		"winston": "^3.11.0",
		"winston-daily-rotate-file": "^4.7.1",
		"node-cron": "^3.0.3",
		"multer": "^1.4.5-lts.1",
		"sharp": "^0.32.6",
		"sanitize-html": "^2.11.0",
		"validator": "^13.11.0",
		"moment": "^2.29.4",
		"lodash": "^4.17.21",
		"ws": "^8.14.2",
		"socket.io": "^4.7.4"
	},
	"devDependencies": {
		"@types/node": "^20.17.14",
		"@types/jest": "^29.5.14",
		"@types/express": "^4.17.21",
		"@types/cors": "^2.8.17",
		"@types/compression": "^1.7.5",
		"@types/morgan": "^1.9.9",
		"@types/pg": "^8.10.9",
		"@types/uuid": "^9.0.7",
		"@types/joi": "^17.2.3",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/multer": "^1.4.11",
		"@types/sanitize-html": "^2.9.5",
		"@types/validator": "^13.11.7",
		"@types/lodash": "^4.14.202",
		"@types/ws": "^8.5.10",
		"typescript": "~5.3.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.11",
		"tsconfig-paths": "^4.2.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.6",
		"cross-env": "^7.0.3",
		"rimraf": "^5.0.1",
		"nodemon": "^3.0.2",
		"supertest": "^6.3.3",
		"@types/supertest": "^2.0.16"
	}
}
