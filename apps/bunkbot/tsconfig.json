{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"]
		},
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"tests",
		"src/**/__tests__/**"
	]
}

