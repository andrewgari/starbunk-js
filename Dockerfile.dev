FROM node:18-alpine

# Install development dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    git \
    ffmpeg

WORKDIR /app

COPY package*.json yarn.lock ./

# Install ALL dependencies including dev
RUN yarn install

# Add global packages needed for development
RUN yarn global add \
    ts-node \
    is-ci \
    distube

USER node
