{
	"name": "bunkbot",
	"version": "0.0.2",
	"description": "it's bot that says blu, among things...",
	"type": "commonjs",
	"scripts": {
		"build": "npm run build:shared && npm run build:containers",
		"build:shared": "tsc -p containers/shared/tsconfig.json",
		"build:containers": "npm run build:bunkbot && npm run build:djcova && npm run build:starbunk-dnd && npm run build:covabot",
		"build:bunkbot": "cd containers/bunkbot && npm run build",
		"build:djcova": "cd containers/djcova && npm run build",
		"build:starbunk-dnd": "cd containers/starbunk-dnd && npm run build",
		"build:covabot": "cd containers/covabot && npm run build",
		"start": "docker compose up -d",
		"start:dev": "docker compose -f docker-compose.dev.yml up -d",
		"stop": "docker compose down",
		"logs": "docker compose logs -f",
		"logs:bunkbot": "docker compose logs -f bunkbot",
		"logs:djcova": "docker compose logs -f djcova",
		"logs:starbunk-dnd": "docker compose logs -f starbunk-dnd",
		"logs:covabot": "docker compose logs -f covabot",
		"dev:bunkbot": "cd containers/bunkbot && npm run dev",
		"dev:djcova": "cd containers/djcova && npm run dev",
		"dev:starbunk-dnd": "cd containers/starbunk-dnd && npm run dev",
		"dev:covabot": "cd containers/covabot && npm run dev",
		"test": "npm run test:full",
		"test:full": "npm run test:shared && npm run test:containers",
		"test:shared": "cd containers/shared && npm test",
		"test:containers": "npm run test:bunkbot && npm run test:djcova && npm run test:starbunk-dnd && npm run test:covabot",

		"db:seed": "npx tsx prisma/seed.ts",
		"db:generate": "npx prisma generate",
		"db:push": "npx prisma db push",
		"test:bots": "node scripts/test-reply-bots.js",
		"test:bunkbot": "cd containers/bunkbot && npm test",
		"test:djcova": "cd containers/djcova && npm test",
		"test:starbunk-dnd": "cd containers/starbunk-dnd && npm test",
		"test:covabot": "cd containers/covabot && npm test",
		"test:coverage": "npm run test -- --coverage",
		"lint": "eslint containers/*/src/**/*.ts",
		"lint:fix": "eslint containers/*/src/**/*.ts --fix",
		"lint:shared": "cd containers/shared && npm run lint",
		"lint:bunkbot": "cd containers/bunkbot && npm run lint",
		"lint:djcova": "cd containers/djcova && npm run lint",
		"lint:starbunk-dnd": "cd containers/starbunk-dnd && npm run lint",
		"lint:covabot": "cd containers/covabot && npm run lint",
		"format": "prettier --write \"containers/*/src/**/*.ts\"",
		"type-check": "npm run type-check:shared && npm run type-check:containers",
		"type-check:shared": "cd containers/shared && npm run type-check",
		"type-check:containers": "npm run type-check:bunkbot && npm run type-check:djcova && npm run type-check:starbunk-dnd && npm run type-check:covabot",
		"type-check:bunkbot": "cd containers/bunkbot && npm run type-check",
		"type-check:djcova": "cd containers/djcova && npm run type-check",
		"type-check:starbunk-dnd": "cd containers/starbunk-dnd && npm run type-check",
		"type-check:covabot": "cd containers/covabot && npm run type-check",
		"clean": "rimraf containers/*/dist && rimraf containers/shared/dist",
		"build:clean": "npm run clean && npm run build",
		"docker:build": "docker compose build",
		"docker:build:bunkbot": "docker compose build bunkbot",
		"docker:build:djcova": "docker compose build djcova",
		"docker:build:starbunk-dnd": "docker compose build starbunk-dnd",
		"docker:build:covabot": "docker compose build covabot",
		"docker:rebuild": "docker compose build --no-cache",
		"check:all": "npm run type-check && npm run lint && npm run test:full && npm run docker:build",
		"check:all:containers": "npm run check:all:shared && npm run check:all:bunkbot && npm run check:all:djcova && npm run check:all:starbunk-dnd && npm run check:all:covabot",
		"check:all:shared": "cd containers/shared && npm run check:all",
		"check:all:bunkbot": "cd containers/bunkbot && npm run check:all",
		"check:all:djcova": "cd containers/djcova && npm run check:all",
		"check:all:starbunk-dnd": "cd containers/starbunk-dnd && npm run check:all",
		"check:all:covabot": "cd containers/covabot && npm run check:all",
		"check:ci": "npm run type-check && npm run lint && npm run test:full",
		"setup:dirs": "./scripts/ensure-directories.sh",
		"setup:containers": "npm run setup:shared && npm run setup:bunkbot && npm run setup:djcova && npm run setup:starbunk-dnd && npm run setup:covabot",
		"setup:shared": "cd containers/shared && npm install",
		"setup:bunkbot": "cd containers/bunkbot && npm install",
		"setup:djcova": "cd containers/djcova && npm install",
		"setup:starbunk-dnd": "cd containers/starbunk-dnd && npm install",
		"setup:covabot": "cd containers/covabot && npm install"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/andrewgari/starbunk-js.git"
	},
	"keywords": [
		"discord",
		"blue"
	],
	"author": "Andrew Gari",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/andrewgari/starbunk-js/issues"
	},
	"homepage": "https://github.com/andrewgari/starbunk-js#readme",
	"dependencies": {
		"@prisma/client": "^5.7.1",
		"dotenv": "^16.6.1",
		"prisma": "^5.7.1",
		"tsx": "^4.6.2"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.34.0",
		"@typescript-eslint/parser": "^8.34.0",
		"eslint": "^8.56.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.1",
		"typescript": "~5.3.0"
	}
}
